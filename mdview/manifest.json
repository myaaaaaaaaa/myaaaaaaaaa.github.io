{
	"name": "Markdown Viewer",
	"start_url": "index.htm",
	"display": "standalone",
	"icons": [
		{
			"src": "icon.png",
			"sizes": "any",
			"purpose": "maskable any"
		}
	],
	"file_handlers": [
		{
			"action": "index.htm",
			"accept": {
				"text/plain": [
					".txt"
				],
				"text/markdown": [
					".md"
				]
			}
		}
	]
}